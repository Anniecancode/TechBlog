<div id="createpost-card"
     class="card mb-3 mx-auto align-middle" 
     style="max-width: 48rem;">

    <h1 class="text-center fw-bold text-bg-dark">
        Update Post
    </h1>
    
    <form id="createPost" class="card-header">
        <div class="mb-3 card-subheader">
            <label for="title" class="fw-bold fs-4">Id:</label>
            <input name="post-id" type="text" class="form-input" id="post-id"
              value="{{id}}"/>   
        </div> 

        <div class="mb-3 card-header">
            <label for="title" class="fw-bold fs-4">Title:</label>
            <input type="text" class="form-input" id="post-title"
              style="width:400px"
              value="{{title}}"/>   
        </div>
        <div class="mb-3 card-body">
            <textarea type="text" class="form-input" id="post-content"
              cols="92.5" rows="10" 
              value="{{content}}">
            </textarea>
        </div>
        <div>
            <button><type="submit" class="btn btn-warning" href="/dashboard">
                Save 
            </button>         
        </div>
    </form>
</div>

<script src="/js/updatePost.js"></script>
